# Azure AI Search Configuration
AZURE_SEARCH_SERVICE_NAME=<>
AZURE_SEARCH_API_KEY=<>
AZURE_SEARCH_INDEX_NAME=<>

# Azure OpenAI / AI Foundry Configuration
# Using AI Foundry cognitiveservices endpoint
AZURE_OPENAI_ENDPOINT=https://<>.cognitiveservices.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Model Deployments (AI Foundry deployment names)
AZURE_OPENAI_DEPLOYMENTS=gpt-4o,gpt-4.1-mini,gpt-4o-mini
AZURE_OPENAI_DEFAULT_DEPLOYMENT=gpt-4o-mini

# Embedding Model (AI Foundry deployment)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_DIMENSIONS=3072

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://<>.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=<>

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://<>.documents.azure.com:443/
COSMOS_DB_KEY=<>
COSMOS_DB_DATABASE_NAME=RAGfeedback
COSMOS_DB_CONTAINER_NAME=RAGFeed
COSMOS_USE_AAD=true

# Azure Identity (set tenant ID to target the correct account)
AZURE_TENANT_ID=<>

# Data Ingestion
LOCAL_DATA_PATH=./data
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Index Configuration
# USE_EXISTING_INDEX: If true, use existing index without auto-ingestion. If false, create/update index.
USE_EXISTING_INDEX=true
# AUTO_INGEST: If true (and USE_EXISTING_INDEX=false), auto-ingest documents on startup
AUTO_INGEST=false
# ENABLE_TRACING: Set to false to skip tracing setup (speeds up initialization)
ENABLE_TRACING=true
# LAZY_TRACING: If true, defer tracing setup until first API call (faster startup)
LAZY_TRACING=false

# Azure AI Foundry Tracing (Project endpoint format)
AZURE_AI_FOUNDRY_ENDPOINT=https://<>.services.ai.azure.com/api/projects/<FoundryProject>

# Application Insights (backup - used if AI Foundry tracing fails)
APPLICATIONINSIGHTS_CONNECTION_STRING=<>

# Application Settings
APP_TITLE=RAG Chat Assistant
DEFAULT_SYSTEM_PROMPT=You are a helpful AI assistant that provides accurate information based on the retrieved documents.